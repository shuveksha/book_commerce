{{> header}}
<div class="container">
    <div class="m-3">
        <div class="row">
            <div class="col-md-3 col-sm-12">

                <div class="card" style="width: 18rem;">
                    <img src="{{book.thumbnail}}" class="card-img-top" alt="...">
                    <div class="card-body">

                        <div><span class="fs-4">Publisher:</span> Ratna Pustak Bhandar
                            <hr>

                        </div>


                    </div>
                </div>


            </div>

            <div class="col-md-9 col-sm-12">


                <div class="card text-center">
                    <div class="card-header text-start text-uppercase">
                        product Details
                    </div>
                    <div class="card-body" style="text-align:left">
                        <h5 class="card-title fs-4">{{book.title}}
                        </h5>
                        <p class="fs-6">By: Kumar Nagarkoti</p>
                        <h5 class="fs-5">Description:</h5>
                        <p class="cart-text">{{book.description}}</p>

                        <div class="row">


                            <div class="card m-3">

                                <div class="card-body">
                                    <h5 class="card-title text-dark fs-5">Price: {{book.price}}</h5>
                                    <p class="card-text">With supporting text below as a natural lead-in to additional
                                        content.</p>
                                    <a href="/cart/add/{{book.id}}" class=" btn btn-dark">Add to cart</a>
                                    <a href="{{book.url}}" class=" btn btn-outline-dark">Read online</a>
                                </div>
                            </div>

                        </div>


                        <div class="row mb-5">


                            <div class="card m-3">

                                <div class="card-body">
                                    <h5 class="card-title text-dark fs-5">Book Details</h5>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item text-capitalize"><span
                                                class="fs-5 mr-5 text-capitalize">Genre:</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <a class="text-decoration-none"
                                                href="/genres/{{book.genre}}">{{book.genre}}</a>
                                        </li>

                                        <li class="list-group-item"><span
                                                class="fs-5 mr-5 ">Publisher:</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <a class="text-decoration-none"
                                                href="/publishers">{{book.publisher_name}}</a>
                                        </li>



                                        <li class="list-group-item"><span
                                                class="fs-5 mr-5">Isbnno:</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{book.isbno}}
                                        </li>
                                        <li class="list-group-item"><span
                                                class="fs-5 mr-5">Pages:</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{book.pages}}
                                        </li>
                                        <li class="list-group-item"><span class="fs-5 mr-5">New
                                                Release:</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{book.new_release}}
                                        </li>
                                        <li class="list-group-item"><span class="fs-5 mr-5">Best
                                                Selling:</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{book.best_selling}}
                                        </li>

                                    </ul>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>

                <!-- Related Books -->

                <h3 class="mt-3 fs-5">Related Books</h3>


                <div class="owl-carousel owl-theme">
                    {{#each relatedBooks}}
                    <div class="card item" style="width: 10rem;">
                        <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
                        <div class="card-body">
                            <h2 class="fs-6 text-left">{{this.title}}</h2>
                            <a href="/cart/add/{{this.id}}" class="btn btn-success text-left">Add to cart</a>
                        </div>
                    </div>
                    {{/each}}

                </div>

            </div>
        </div>
    </div>
</div>

{{> footer}}