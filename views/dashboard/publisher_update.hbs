{{> dashboard_nav}}


<form method="POST" , action="/dashboard/publisher/update">

    <!-- id -->
    <input type="hidden" value="{{publisher.id}}" name="id">
    <!-- name -->
    <div class="mb-3">
        <label for="publisher_name" class="form-label">Publisher name</label>
        <input type="text" name="name" value="{{publisher.name}}" class=" form-control" id="publisher_name"
            aria-describedby="emailHelp">
    </div>


    <!-- description -->
    <div class="mb-3">
        <label for="description" class="form-label">Publisher description</label>
        <textarea type="email" name="description" id="description" class="form-control" id="publisher_name"
            aria-describedby="emailHelp">{{publisher.description}}</textarea>
    </div>


    <!-- email -->
    <div class="mb-3">
        <label for="email" class="form-label">Publisher Email</label>
        <input type="email" id="email" value="{{publisher.email}}" name="email" class="form-control" id="publisher_name"
            aria-describedby="emailHelp">
    </div>

    <!-- phone -->
    <div class="mb-3">
        <label for="phone" class="form-label">Publisher phone</label>
        <input type="phone" value="{{publisher.phone}}" name="phone" class="form-control" id="publisher_name"
            aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>

    <input type="submit" class="bnt btn-dark" value="Update publisher">

</form>
{{> dashboard_footer}}