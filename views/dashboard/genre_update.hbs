<form method="POST" , action="/dashboard/genre/update">

    <!-- id -->
    <input type="hidden" value="{{genre.id}}" name="id">
    <!-- name -->
    <div class="mb-3">
        <label for="publisher_name" class="form-label">Genre name</label>
        <input type="text" name="genre" value="{{genre.genre}}" class=" form-control" id="publisher_name"
            aria-describedby="emailHelp">
    </div>


    <!-- description -->
    <div class="mb-3">
        <label for="description" class="form-label">Publisher description</label>
        <textarea type="email" name="description" id="description" class="form-control" id="publisher_name"
            aria-describedby="emailHelp">{{genre.description}}</textarea>
    </div>




    <input type="submit" class="bnt btn-dark" value="Update genre">

</form>
{{> dashboard_footer}}